<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title || 'Panadería' %>
    </title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="/css/panaderia.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Panadería Don Juanito</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/producto">Panadería</a></li>
                    <li class="nav-item"><a class="nav-link" href="/reposteria">Repostería</a></li>
                    <li class="nav-item"><a class="nav-link" href="/carro">Carro</a></li>
                    <li class="nav-item"><a class="nav-link" href="/registro">Registro</a></li>
                    <li class="nav-item"><a class="nav-link" href="/producto/nuevo">Agregar Productos</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Contenido principal -->
    <main class="container mt-5 pt-4">
        <h1 class="text-center">Listado de Productos</h1>
        <p class="text-center">Consulta nuestros productos disponibles.</p>

        <% if (productos.length===0) { %>
            <div class="alert alert-info text-center mt-4">
                No hay productos registrados aún.
            </div>
            <% } else { %>
                <div class="table-responsive mt-4">
                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Clasificación</th>
                                <th>Descripción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% productos.forEach((producto, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= producto.nombre %>
                                    </td>
                                    <td>
                                        <%= producto.clasificacion %>
                                    </td>
                                    <td>
                                        <%= producto.descripcion %>
                                    </td>
                                    <td>
                                        <a href="/producto/<%= producto.id %>" class="btn btn-sm btn-info">Ver</a>
                                        <a href="/producto/editar/<%= producto.id %>"
                                            class="btn btn-sm btn-warning">Editar</a>
                                        <form action="/producto/eliminar/<%= producto.id %>" method="POST"
                                            class="d-inline"
                                            onsubmit="return confirm('¿Estás seguro de eliminar este producto?');">
                                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } %>
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-5">
        <p>&copy; <%= new Date().getFullYear() %> - Panadería Don Juanito</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts personalizados -->
    <script src="/js/site.js"></script>
</body>

</html>